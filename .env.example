# Browork — environment configuration
# Copy to .env and fill in your values

# ── Server ──
PORT=3001
HOST=0.0.0.0
DATA_ROOT=./data
MAX_UPLOAD_SIZE_MB=10

# ── Sandbox (Docker container per user) ──
SANDBOX_ENABLED=false
SANDBOX_IMAGE=opentowork-sandbox:latest
SANDBOX_MEMORY=512m
SANDBOX_CPUS=1.0
SANDBOX_NETWORK=bridge

# ── Rate Limiting ──
RATE_LIMIT_MAX=100

# ── Pi Agent / Azure OpenAI ──
PI_PROVIDER=azure-openai-responses
PI_MODEL=gpt-4
DEFAULT_THINKING_LEVEL=medium
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_RESOURCE_NAME=
AZURE_OPENAI_API_VERSION=2025-12-01-preview
